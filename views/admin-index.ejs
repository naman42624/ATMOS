            <!-- <div class="column-text" onclick="show_column7()"><h3>Reports</h3></div> -->
        </div>
        <div class="column2">
            <h1>List Of All The Users</h1>
            <div>
                <input type="text"> 
                <button>Search</button>
                <table id="customers">
                    <tr>
                        <th>Name</th>
                        <th>Email</th>
                        <th>Phone</th>
                        <th>Password</th>
                        <th>Action</th>
                    </tr>
                    <% for(var i=0; i<user.length; i++){ %>
                        <tr>
                            <td><%= user[i].firstname %> <%= user[i].lastname %></td>
                            <td><%= user[i].email %></td>
                            <td><%= user[i].phone %></td>
                            <td><%= user[i].password %></td>
                            <td> <a href="../delete/<%= user[i]._id%>">Delete</a> </td>
                        
                        </tr>
                    <% } %>
                    <% console.log(user) %>
                </table>
            </div>
        </div>
        <div class="column3">
            <h1>Column 3</h1>
        </div>
